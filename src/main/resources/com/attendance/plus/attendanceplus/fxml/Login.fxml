<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: rgb(18, 18, 19);" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.plus.attendanceplus.LoginController">
    <!-- Title -->
    <Label alignment="CENTER" style="-fx-font-size: 48px; -fx-text-fill: rgb(21, 133, 246);" styleClass="inter-extrabold" text="Attendance+" textFill="WHITE">
        <padding>
            <Insets bottom="40.0" />
        </padding>
      <font>
         <Font size="38.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </Label>

    <!-- Login Form -->
    <VBox alignment="CENTER" spacing="15.0">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
        </padding>
        <TextField fx:id="usernameField" promptText="Email">
        <styleClass>
            <String fx:value="login-field" />
            <String fx:value="inter-semibold" />
        </styleClass>
        </TextField>
        <PasswordField fx:id="passwordField" promptText="Password">
        <styleClass>
            <String fx:value="login-field" />
            <String fx:value="inter-semibold" />
        </styleClass>
        </PasswordField>
        <Button fx:id="loginButton" onAction="#setLoginButton" text="Log In">
        <styleClass>
            <String fx:value="login-button" />
            <String fx:value="inter-semibold" />
        </styleClass>
        <VBox.margin>
            <Insets top="40.0" />
        </VBox.margin>
        </Button>
      <Button fx:id="signUpButton" layoutX="50.0" layoutY="193.0" onAction="#setSignUpButton" text="Sign Up">
         <styleClass>
            <String fx:value="login-button" />
            <String fx:value="inter-semibold" />
         </styleClass>
      </Button>
    </VBox>
</VBox>
