<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sidePanel" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.plus.attendanceplus.SidePanelController" spacing="10.0">
    <padding>
        <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
    </padding>
    <Label styleClass="subject-title" text="List of Subjects" textFill="WHITE" />
    <Label fx:id="dateLabel" styleClass="subject-date" text="10/03/2025" textFill="#d7d7d7" />
    <VBox fx:id="subjectCard1" spacing="5.0" styleClass="subject-card">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <VBox spacing="5.0">
                <HBox spacing="10.0">
                    <Label fx:id="courseLabel1" styleClass="subject-info" text="TFB1093" textFill="WHITE" />
                    <Label fx:id="placeLabel1" styleClass="subject-info" text="Online" textFill="WHITE" />
                    <Label fx:id="timeLabel1" styleClass="subject-info" text="10:00-12:00" textFill="WHITE" />
                </HBox>
                <Label fx:id="subjectLabel1" maxWidth="250.0" styleClass="subject-name" text="Data Communication and Network" textFill="WHITE" wrapText="true" />
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="attendButton1" onAction="#attendBtnclick1" styleClass="attend-button" text="ATTEND" />
        </HBox>
        <HBox fx:id="subjectStats1" managed="false" styleClass="subject-stats" visible="false">
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Present" textFill="WHITE" />
                <Label fx:id="presentLabel1" styleClass="stats-value" text="0" textFill="WHITE" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Absent" textFill="WHITE" />
                <Label fx:id="absentLabel1" styleClass="stats-value" text="0" textFill="WHITE" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Ratio %" textFill="WHITE" />
                <Label fx:id="ratioLabel1" styleClass="stats-value" text="0.00" textFill="#64ee64" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </VBox>
    <VBox fx:id="subjectCard2" spacing="5.0" styleClass="subject-card">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <VBox spacing="5.0">
                <HBox spacing="10.0">
                    <Label fx:id="courseLabel2" styleClass="subject-info" text="TEB1053" textFill="WHITE" />
                    <Label fx:id="placeLabel2" styleClass="subject-info" text="D4" textFill="WHITE" />
                    <Label fx:id="timeLabel2" styleClass="subject-info" text="8:00-10:00" textFill="WHITE" />
                </HBox>
                <Label fx:id="subjectLabel2" maxWidth="250.0" styleClass="subject-name" text="Discrete Mathematics" textFill="WHITE" wrapText="true" />
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="attendButton2" onAction="#attendBtnclick2" styleClass="attend-button" text="ATTEND" />
        </HBox>
        <HBox fx:id="subjectStats2" managed="false" styleClass="subject-stats" visible="false">
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Present" textFill="WHITE" />
                <Label fx:id="presentLabel2" styleClass="stats-value" text="0" textFill="WHITE" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Absent" textFill="WHITE" />
                <Label fx:id="absentLabel2" styleClass="stats-value" text="0" textFill="WHITE" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label styleClass="stats-label" text="Ratio %" textFill="WHITE" />
                <Label fx:id="ratioLabel2" styleClass="stats-value" text="0.00" textFill="#64ee64" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </VBox>
</VBox>