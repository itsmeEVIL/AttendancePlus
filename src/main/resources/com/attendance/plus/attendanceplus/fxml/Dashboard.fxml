<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.plus.attendanceplus.DashboardController">
    <children>
        <!-- Top bar section -->
        <HBox fx:id="topBar" alignment="TOP_CENTER" />

        <!-- Main content area -->
        <HBox fx:id="mainBody">
            <children>
                <!-- Main panel for calendar and navigation -->
                <VBox fx:id="mainPanel">
                    <children>
                        <!-- Navigation bar with month label and buttons -->
                        <HBox alignment="BASELINE_LEFT" spacing="8.0">
                            <children>
                                <!-- Month label -->
                                <Label fx:id="monthLabel" styleClass="inter-extrabold" text="MARCH 2025" textFill="WHITE" />
                                <!-- Spacer to push buttons to the right -->
                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Navigation buttons -->
                                <Button fx:id="prevMonthButton" alignment="CENTER" contentDisplay="TOP" onAction="#handlePrevMonth">
                                    <graphic>
                                        <ImageView fitHeight="11" fitWidth="8">
                                            <Image url="@../images/back.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="resetMonthButton" contentDisplay="TOP" onAction="#handleResetMonth">
                                    <graphic>
                                        <ImageView fitHeight="14" fitWidth="14">
                                            <Image url="@../images/current.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="nextMonthButton" contentDisplay="TOP" onAction="#handleNextMonth">
                                    <graphic>
                                        <ImageView fitHeight="11" fitWidth="8">
                                            <Image url="@../images/forward.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="25.0" />
                            </padding>
                        </HBox>

                        <!-- Calendar grid -->
                        <GridPane fx:id="calendar" styleClass="inter-extrabold" alignment="TOP_CENTER" hgap="8.0" vgap="8.0">
                            <!-- Day of week headers -->
                            <Label fx:id="monLabel" styleClass="calendarHeader" alignment="CENTER" text="Mon" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label fx:id="tueLabel" styleClass="calendarHeader" alignment="CENTER" text="Tue" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="wedLabel" styleClass="calendarHeader" alignment="CENTER" text="Wed" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <Label fx:id="thuLabel" styleClass="calendarHeader" alignment="CENTER" text="Thu" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                            <Label fx:id="friLabel" styleClass="calendarHeader" alignment="CENTER" text="Fri" textAlignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                            <Label fx:id="satLabel" styleClass="calendarHeader" alignment="CENTER" text="Sat" textAlignment="CENTER" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                            <Label fx:id="sunLabel" styleClass="calendarHeader" alignment="CENTER" text="Sun" textAlignment="CENTER" GridPane.columnIndex="6" GridPane.rowIndex="0" />

                            <!-- Grid constraints -->
                            <columnConstraints>
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints /> <!-- Header row -->
                                <RowConstraints maxHeight="8.0" /> <!-- Gap row -->
                                <RowConstraints /> <!-- Date row 1 -->
                                <RowConstraints /> <!-- Date row 2 -->
                                <RowConstraints /> <!-- Date row 3 -->
                                <RowConstraints /> <!-- Date row 4 -->
                                <RowConstraints /> <!-- Date row 5 -->
                                <RowConstraints /> <!-- Date row 6 -->
                            </rowConstraints>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets top="25.0" right="40.0" bottom="25.0" left="40.0" />
                    </padding>
                </VBox>

                <!-- Side panel -->
                <VBox fx:id="sidePanel" />
            </children>
        </HBox>
    </children>
</VBox>