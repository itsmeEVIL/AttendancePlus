<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.attendance.plus.attendanceplus.DashboardController"
      stylesheets="@styles.css">
    <children>
        <!-- Top bar section -->
        <HBox fx:id="topBar" alignment="TOP_CENTER" />

        <!-- Main content area -->
        <HBox fx:id="mainBody">
            <children>
                <!-- Main panel for calendar and navigation -->
                <VBox fx:id="mainPanel">
                    <children>
                        <!-- Navigation bar with month label and buttons -->
                        <HBox alignment="BASELINE_LEFT" spacing="8.0">
                            <children>
                                <!-- Month label -->
                                <Label fx:id="monthLabel" text="MARCH 2025" textFill="WHITE">
                                    <font>
                                        <Font name="Inter Regular" size="36.0" />
                                    </font>
                                </Label>
                                <!-- Spacer to push buttons to the right -->
                                <Region HBox.hgrow="ALWAYS" />

                                <!-- Navigation buttons -->
                                <Button fx:id="prevMonthButton" alignment="CENTER" contentDisplay="TOP"
                                        onAction="#handlePrevMonth">
                                    <graphic>
                                        <ImageView fitWidth="8" fitHeight="11">
                                            <Image url="@../../../../images/back.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="resetMonthButton" contentDisplay="TOP" onAction="#handleResetMonth">
                                    <graphic>
                                        <ImageView fitWidth="12" fitHeight="12">
                                            <Image url="@../../../../images/current.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="nextMonthButton" contentDisplay="TOP" onAction="#handleNextMonth">
                                    <graphic>
                                        <ImageView fitWidth="8" fitHeight="11">
                                            <Image url="@../../../../images/forward.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="15.0" />
                            </padding>
                        </HBox>

                        <!-- Calendar grid -->
                        <GridPane fx:id="calendar" alignment="CENTER" hgap="8.0" vgap="8.0">
                            <!-- Day of week headers -->
                            <Label fx:id="monLabel" text="Mon" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label fx:id="tueLabel" text="Tue" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="wedLabel" text="Wed" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <Label fx:id="thuLabel" text="Thu" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                            <Label fx:id="friLabel" text="Fri" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                            <Label fx:id="satLabel" text="Sat" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                            <Label fx:id="sunLabel" text="Sun" alignment="CENTER" textAlignment="CENTER" GridPane.columnIndex="6" GridPane.rowIndex="0" />

                            <!-- Grid constraints -->
                            <columnConstraints>
                                <ColumnConstraints percentWidth="14.28" /> <!-- 100% / 7 -->
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints /> <!-- Header row -->
                                <RowConstraints maxHeight="8" /> <!-- Gap row -->
                                <RowConstraints /> <!-- Date row 1 -->
                                <RowConstraints /> <!-- Date row 2 -->
                                <RowConstraints /> <!-- Date row 3 -->
                                <RowConstraints /> <!-- Date row 4 -->
                                <RowConstraints /> <!-- Date row 5 -->
                                <RowConstraints /> <!-- Date row 6 -->
                            </rowConstraints>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets top="25.0" right="40.0" bottom="25.0" left="40.0" />
                    </padding>
                </VBox>

                <!-- Side panel -->
                <VBox fx:id="sidePanel" />
            </children>
        </HBox>
    </children>
</VBox>