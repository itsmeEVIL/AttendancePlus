<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.plus.attendanceplus.DashboardController">
    <children>
        <HBox fx:id="topBar" alignment="TOP_CENTER" style="-fx-background-color: rgb(46, 47, 48);" />
        <HBox fx:id="mainBody">
            <children>
                <VBox fx:id="mainPanel" style="-fx-background-color: rgb(18, 18, 19);">
                    <children>
                        <HBox alignment="BASELINE_LEFT" spacing="8.0">
                            <children>
                                <Label fx:id="monthLabel" text="MARCH 2025" textFill="WHITE">
                                    <font>
                                        <Font name="Inter Regular" size="36.0" />
                                    </font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="prevMonthButton" alignment="CENTER" contentDisplay="TOP" onAction="#handlePrevMonth" style="-fx-background-color: rgb(37, 37, 37); -fx-border-width: 0; -fx-font-size: 20px; -fx-cursor: hand; -fx-background-radius: 6px;">
                                    <graphic>
                                        <ImageView fitWidth="8" fitHeight="11">
                                            <Image url="@../../../../images/back.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="resetMonthButton" contentDisplay="TOP" onAction="#handleResetMonth" style="-fx-pref-width: 55px; -fx-background-color: rgb(37, 37, 37); -fx-border-width: 0; -fx-font-size: 20px; -fx-cursor: hand; -fx-background-radius: 6px;">
                                    <graphic>
                                        <ImageView fitWidth="12" fitHeight="12">
                                            <Image url="@../../../../images/current.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="nextMonthButton" contentDisplay="TOP" onAction="#handleNextMonth" style="-fx-background-color: rgb(37, 37, 37); -fx-border-width: 0; -fx-font-size: 20px; -fx-cursor: hand; -fx-background-radius: 6px;">
                                    <graphic>
                                        <ImageView fitWidth="8" fitHeight="11">
                                            <Image url="@../../../../images/forward.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="15.0" />
                            </padding>
                        </HBox>
                        <GridPane fx:id="calendar" alignment="CENTER" hgap="8.0" style="-fx-background-color: rgb(18, 18, 19);" vgap="8.0">
                            <!-- Header row for days of the week -->
                            <Label fx:id="monLabel" alignment="CENTER" text="Mon" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label fx:id="tueLabel" alignment="CENTER" text="Tue" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="wedLabel" alignment="CENTER" text="Wed" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <Label fx:id="thuLabel" alignment="CENTER" text="Thu" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                            <Label fx:id="friLabel" alignment="CENTER" text="Fri" textAlignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                            <Label fx:id="satLabel" alignment="CENTER" text="Sat" textAlignment="CENTER" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                            <Label fx:id="sunLabel" alignment="CENTER" text="Sun" textAlignment="CENTER" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                            <columnConstraints>
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                                <ColumnConstraints percentWidth="14.28" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints /> <!-- Header row -->
                                <RowConstraints maxHeight="8" /> <!-- Extra gap row -->
                                <RowConstraints /> <!-- Row 1 -->
                                <RowConstraints /> <!-- Row 2 -->
                                <RowConstraints /> <!-- Row 3 -->
                                <RowConstraints /> <!-- Row 4 -->
                                <RowConstraints /> <!-- Row 5 -->
                                <RowConstraints /> <!-- Row 6 -->
                            </rowConstraints>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
                    </padding>
                </VBox>
                <VBox fx:id="sidePanel" style="-fx-background-color: rgb(34, 35, 36);" />
            </children>
        </HBox>
    </children>
</VBox>